{
  "name": "dish-ui",
  "private": true,
  "version": "0.0.1",
  "description": "A library for React components",
  "main": "dist/index.js",
  "dependencies": {
    "@types/react": "^17.0.0",
    "prop-types": "^15.7.2"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/eslint-parser": "^7.12.1",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-react": "^7.12.10",
    "@babel/preset-typescript": "^7.12.7",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.0.0",
    "autoprefixer": "^9.8.6",
    "babel-loader": "^8.2.2",
    "chai": "^4.3.4",
    "conventional-changelog-cli": "^2.1.1",
    "css-loader": "^5.0.1",
    "eslint": "^7.19.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "lerna": "^4.0.0",
    "mocha": "^9.1.1",
    "postcss": "^8.2.9",
    "postcss-loader": "^5.2.0",
    "prettier": "^2.2.1",
    "rollup": "^2.56.3",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^7.0.2",
    "sass-loader": "^10.1.1",
    "style-loader": "^2.0.0",
    "stylelint": "^13.10.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-scss": "^3.19.0",
    "terser-webpack-plugin": "^5.1.1",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "webpack": "^5.19.0",
    "webpack-cli": "^4.4.0"
  },
  "peerDependencies": {
    "react": "^17"
  },
  "files": [
    "CHANGELOG.md",
    "README.md",
    "package.json",
    "dist/"
  ],
  "scripts": {
    "build": "exit 1 && npm run dist",
    "changelog": "npx conventional-changelog -p angular -i CHANGELOG.md -s",
    "dist": "npm run dist:ts",
    "dist:ts": "npx webpack",
    "dist:remove": "rm -rf ./dist/ || erase /Q .\\dist\\",
    "format": "npx prettier --write \"packages/**/*.{tsx,ts,js}\"",
    "format:check": "npx prettier --list-different \"packages/**/*.{tsx,ts,js}\"",
    "lint": "npm run lint:ts && npm run lint:style",
    "lint:fix": "npx eslint packages/**/*.{ts,tsx} --fix",
    "lint:style": "npx stylelint \"packages/**/*.scss\"",
    "lint:ts": "npx eslint packages/**/*.{ts,tsx}",
    "prepublishOnly": "npm run build",
    "test": "npm run format:check && npm run lint"
  },
  "keywords": [
    "react",
    "component",
    "react-component",
    "pot-ui",
    "pot"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pot-ui/pot-ui.git"
  },
  "author": "TechPot Studio",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pot-ui/pot-ui/issues"
  },
  "homepage": "https://github.com/pot-ui/pot-ui#readme"
}
