{
  "compilerOptions": {
    "declaration": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "target": "ES2020",
    "module": "CommonJS",
    "jsx": "react",
    "outDir": "dist/",
    "baseUrl": ".",
    "paths": {
      "@dish-ui/core": ["./packages/core"],
      "@dish-ui/core/*": ["./packages/core/*"]
    }
  },
  "include": [
    "src/"
  ]
}